<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Crank</title>

    <link href="/styles.css" media="screen" rel="stylesheet" type="text/css" />
    <script src="/javascripts/jquery-1.3.2.min.js" type="text/javascript"></script>
    
    <% if @editing %>
      <script>
        pageName = '<%= @page.name if @page %>';
      </script>

      <script src="/javascripts/jquery-ui-1.7.2.custom.min.js" type="text/javascript"></script>
      <link href="/javascripts/jquery-ui-1.7.2.custom.css" media="screen" rel="stylesheet" type="text/css" />

      <script src="/javascripts/editing.js" type="text/javascript"></script>
      <script src="/javascripts/toolbar.js" type="text/javascript"></script>
      <link href="/editing.css" media="screen" rel="stylesheet" type="text/css" />
    <% end %>
  </head>

  <body>
    <%= erb(:'_toolbox', :layout => false) if @editing %>

    <div id="menu">
      <% @pages.each do |page| %>
        <a href="/show/<%= page.name %>"><%= page.name %></a>
      <% end %>
    </div>

    <div id="main">
      <%= yield %>
    </div>
  </body>
</html>
